{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.5/.schema/devbox.schema.json",
  "packages": [
    "arduino-cli@latest",
    "docker@latest",
    "docker-compose@latest",
    "nodePackages.node-red@latest",
    "nodePackages.pnpm@latest",
    "bun@latest",
    "nodejs@latest",
    "dnsmasq@latest",
    "linux-wifi-hotspot@latest"
  ],
  "shell": {
    "init_hook": ["echo 'Welcome to devbox!' > /dev/null"],
    "scripts": {
      "nodered": ["node-red --port 1881 --userDir nodered"],
      "arduino": ["arduino-cli compile arduino", "arduino-cli upload arduino"],
      "hotspot": [
          "sudo $(which create_ap) wlp0s20f3 wlp0s20f3 jug_2 --freq-band 2.4 -g 192.168.4.1 --no-dnsmasq --daemon",
          "sudo dnsmasq --interface=ap0 --bind-interfaces --dhcp-range=192.168.4.2,192.168.4.255 -z"
      ]
    }
  }
}
